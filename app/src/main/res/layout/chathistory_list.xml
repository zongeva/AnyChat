<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:background="@drawable/phone_num_slot"
    android:orientation="vertical"
    android:weightSum="1">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="57dp"
        android:layout_margin="5dp"
        android:layout_weight="9.80">

        <TextView
            android:id="@+id/chatlist_timestamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:text="timestamp"
            android:textSize="12dp"
            android:textColor="@color/grey500" />

        <TextView
            android:id="@+id/chl_tv1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="5dp"

            android:layout_toEndOf="@+id/chatlist_avatar"
            android:maxLength="40"
            android:maxLines="1"
            android:text="User Name"
            android:textColor="#000000"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/chl_tv2"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_above="@+id/chatlist_timestamp"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/chl_tv1"

            android:layout_marginLeft="5dp"
            android:layout_toEndOf="@+id/chatlist_avatar"
            android:maxLength="50"
            android:maxLines="1"
            android:text="Message"
            android:textColor="#000000" />

        <!--<com.github.curioustechizen.ago.RelativeTimeTextView-->
        <!--android:id="@+id/timestamp"-->
        <!--android:layout_width="100dp"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_alignParentBottom="true"-->
        <!--android:layout_alignParentEnd="true"-->
        <!--android:textAlignment="viewEnd"-->
        <!--android:textSize="12dp"-->
        <!--app:relative_time_prefix="" />-->


        <ImageView
            android:id="@+id/chatlist_avatar"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_weight="9.80"
            android:src="@drawable/avatar" />

        <TextView
            android:id="@+id/textView76"
            android:layout_width="19dp"
            android:layout_height="19dp"
            android:layout_alignBottom="@+id/chl_tv1"
            android:layout_alignParentStart="true"
            android:background="@drawable/layout_badge"
            android:gravity="center"
            android:paddingBottom="4dp"
            android:textColor="@color/white"
            android:textSize="10dp"
            android:visibility="invisible" />


    </RelativeLayout>


</LinearLayout>