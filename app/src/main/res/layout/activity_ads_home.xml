<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView77"
        android:layout_width="365dp"
        android:layout_height="85dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="11dp"
        android:background="@drawable/layout_bg"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout_editor_absoluteY="7dp" />

    <ImageView
        android:id="@+id/energy_logo"
        android:layout_width="68dp"
        android:layout_height="68dp"
        android:layout_alignBottom="@+id/textView77"
        android:layout_alignStart="@+id/textView77"
        android:layout_marginStart="14dp"
        android:layout_margin="5dp"
        app:srcCompat="@drawable/alert"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="16dp" />

    <TextView
        android:id="@+id/textView80"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/energy_logo"
        android:layout_marginStart="13dp"
        android:layout_toEndOf="@+id/energy_logo"
        android:text="Watch video to get free MP !"
        android:textColor="@color/black87"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView81"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView80"
        android:layout_below="@+id/textView80"
        android:text="Gain 2 MP by watching a video" />
</RelativeLayout>
</android.support.constraint.ConstraintLayout>