<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_item_catalog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_item_catalog"
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:gravity="center_vertical"
                android:paddingLeft="12dp"
                android:text="A"
                android:textColor="@color/vim_tx_black"
                android:textSize="12dp"
                android:visibility="visible" />
        </LinearLayout>

        <View
            android:id="@+id/tv_item_line"
            style="@style/Vim_DividerStyle"
            android:visibility="visible" />

        <LinearLayout
            android:id="@+id/ll_item_contact"
            style="@style/Vim_ItemH64Style"
            android:background="@color/vim_white"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="16dp"
            android:paddingRight="16dp">

            <CheckBox
                android:id="@+id/ch_item_select"
                style="@style/Vim_ChoiceStyle"
                android:background="@null"
                android:checked="false"
                android:clickable="false"
                android:enabled="false"
                android:focusable="false"
                android:visibility="visible" />

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/img_item_icon"
                    style="@style/Vim_IconNormalStyle"
                    android:src="@mipmap/vim_icon_default_user" />
            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:paddingLeft="16dp"
                android:paddingRight="24dp">

                <TextView
                    android:id="@+id/tv_item_nick"
                    style="@style/Vim_ItemBlackTxStyle"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:ellipsize="end" />

                <TextView
                    android:id="@+id/tv_item_sign"
                    style="@style/Vim_ItemGrayTxStyle"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:textSize="14dp"
                    android:visibility="gone" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>


</RelativeLayout>