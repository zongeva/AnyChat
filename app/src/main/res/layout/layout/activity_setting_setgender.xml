<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="Change Gender"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            android:textColor="@color/blue_button"
            android:textSize="25dp" />

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="44dp"

            android:background="@android:color/transparent"
            android:onClick="female_selected"
            android:scaleType="fitXY"
            android:src="@drawable/femaleunselect"
            android:layout_below="@+id/textView"
            android:layout_alignParentStart="true" />

        <ImageButton
            android:id="@+id/imageButton2"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_marginRight="20dp"
            android:background="@android:color/transparent"
            android:onClick="male_selected"
            android:scaleType="fitXY"
            android:src="@drawable/maleunselect"
            android:layout_alignTop="@+id/imageButton"
            android:layout_alignEnd="@+id/button" />

        <Button
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="100dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/layout_button"
            android:onClick="btn_select_sex"
            android:text="Confirm"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/skipgender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageButton"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="47dp"
            android:onClick="skipgender"
            android:text="I Wan To Keep It Secret Anyway"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView66"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView"
            android:layout_centerHorizontal="true"
            android:text="TextView"
            android:visibility="gone" />

    </RelativeLayout>


</LinearLayout>